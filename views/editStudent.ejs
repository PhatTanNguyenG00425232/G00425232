<body>
  <h1>Update Student</h1>
  <form method="POST" action="/students/edit/<%= student.sid %>">
    <p>
      <label>Student ID: </label>
      <input type="text" value="<%= student.sid %>" readonly>
    </p>
    <p>
      <label>Name: </label>
      <input type="text" name="name" value="<%= student.name %>" required minlength="2">
    </p>
    <p>
      <label>Age: </label>
      <input type="number" name="age" value="<%= student.age %>" required min="18">
    </p>
    <button type="submit">Update</button>
  </form>
  <a href="/students">Back to Students</a>
</body>
